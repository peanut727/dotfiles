[module/polywins]
type = custom/script
exec = ~/.config/polybar/scripts/polywins.sh 2>/dev/null
format = <label>
format-background =  ${colors.crust}
label = %output%
label-padding = 0
tail = true

[module/empty-space]
type = custom/text
content = "  "

[module/empty-space2]
type = custom/text
content = "  "
content-foreground = #001526
content-background = ${colors.crust}

[module/round-left]
